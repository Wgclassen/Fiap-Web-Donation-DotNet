@model ProdutoModel
<h1>Produto - Editar</h1>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="well">

                @if ( !string.IsNullOrEmpty(@ViewBag.ErrorMessage))
                {
                <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
                }

                <form asp-controller="Produto" asp-action="Edit" method="post">
                    <input type="hidden" name="ProdutoId" value="@Model.ProdutoId"/>
                    <div class="form-group">
                        <label asp-for="NomeProduto" class="form-label"></label>
                        <input asp-for="NomeProduto" class="form-control w-50"/>
                        <span asp-validation-for="NomeProduto" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Descricao" class="form-label"></label>
                        <input asp-for="Descricao" class="form-control w-75"/>
                        <span asp-validation-for="Descricao" class="text-danger"></span>
                    </div>

                    <hr class="hr"/>
                    <input type="submit" value="Enviar"/>
                </form>
            </div>
        </div>
    </div>
</div>