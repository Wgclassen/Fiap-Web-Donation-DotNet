@model ProdutoModel
<h1>Produto - Novo</h1>



<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="well">

                @if (!string.IsNullOrEmpty(@ViewBag.ErrorMessage))
                {
                    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
                }

                <form asp-controller="Produto" asp-action="Create" method="post">
                    <div class="form-group">
                        <label asp-for="NomeProduto" class="form-label"></label>
                        <input asp-for="NomeProduto" class="form-control w-50" />
                        <span asp-validation-for="NomeProduto" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Descricao" class="form-label"></label>
                        <input asp-for="Descricao" class="form-control w-75" />
                        <span asp-validation-for="Descricao" class="text-danger"></span>
                    </div>

                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Disponivel" /> @Html.DisplayNameFor(model => model.Disponivel)
                        </label>
                    </div>

                    <div class="form-group">
                        <label asp-for="SugestaoTroca" class="control-label"></label>
                        <input asp-for="SugestaoTroca" class="form-control" />
                        <span asp-validation-for="SugestaoTroca" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Valor" class="control-label"></label>
                        <input asp-for="Valor" class="form-control" />
                        <span asp-validation-for="Valor" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DataExpiracao" class="control-label"></label>
                        <input asp-for="DataExpiracao" class="form-control" />
                        <span asp-validation-for="DataExpiracao" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CategoriaId" class="control-label"></label>
                        <select asp-for="CategoriaId" asp-items="@ViewBag.Categorias" class="control-label">
                            <option value="">Selecione</option>
                        </select>
                    </div>

                    <hr class="hr" />
                    <input type="submit" value="Enviar" />
                </form>
            </div>
        </div>
    </div>
</div>